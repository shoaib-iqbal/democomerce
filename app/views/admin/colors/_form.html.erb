
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= t 'admin.colors' %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for(@admin_color) do |f| %>

                            
                            <div class="form-group">
                               <%=f.label :name%>
                                <%=f.text_field :name ,class: 'form-control', placeholder: 'Enter name' , required: 'true'%>
                            </div>
                            
                            <div class="form-group">
                               <%=f.label :value%>
                                <%=f.text_field :value ,class: 'form-control', placeholder: 'Enter value', required: 'true'%>
                            </div>
                            <%# if current_user.has_role? :superadmin %>
                                <!-- <div class="form-group"> -->
                                   <%#=f.label :Vendor%>
                                    <%#= f.select "user_id", options_from_collection_for_select(User.all, :id,:name,f.object.user_id),{} ,:class=> 'form-control select', :id=> 'select' %>
                                <!-- </div> -->
                            <%#end%>

                            <%= f.submit 'Submit ', class: "btn btn-default" %>
                            <button type="reset" class="btn btn-default">Reset </button>
                            <a  href="/admin/colors" class="btn btn-default">Back</a>
                        <%end%>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->