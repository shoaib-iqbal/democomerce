<div class="dataTable_wrapper">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-vendors">
        <thead>
            <tr>
            <th style="display:none;"></th>
            
                <th>Name</th>
                
                <th>vendor name</th>
                <th>Image</th>
                <th>Tools</th>
            </tr>
        </thead>
        <tbody>

        <% @admin_categories.each do |category| %>

            <tr class="odd gradeX">
            <td style="display: none;"></td>
                <td><%= category.name %></td>
                <td><%= category.user.name rescue 'admin'%></td>

                <td><%= image_tag category.image.avatar.url(:thumbnail) rescue '' %></td>
                <td class="center">
                    <span><%= link_to '', edit_admin_category_path(category),class: "edit fa fa-edit icon_link with-tip no-text", title: "edit" %> </span>
                    <span>
                        <%= link_to '', admin_category_path(category),  method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-trash icon_link with-tip no-text"%>
                    </span>
                </td>
            </tr>

        <% end %>                                                                             
        </tbody>
    </table>
</div>
<!-- /.table-responsive -->
<script>
    $(document).ready(function() {
        $('#dataTables-vendors').DataTable({
                responsive: true
        });
    });
</script>