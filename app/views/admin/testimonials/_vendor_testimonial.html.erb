<div class="dataTable_wrapper">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-vendors">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>

        <% @admin_testimonials.each do |testimonial| %>

            <tr class="odd gradeX">
                <td><%= testimonial.name %></td>
                <td><%= testimonial.description %></td>
                <td><%= image_tag testimonial.image.avatar.url(:thumbnail) rescue '' %></td>
                <td class="center">
                    <span><%= link_to '', edit_admin_testimonial_path(testimonial),class: "edit fa fa-edit icon_link with-tip no-text", title: "edit" %> </span>
                    <span>
                        <%= link_to '',  admin_testimonial_path(testimonial),  method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-trash icon_link with-tip no-text"%>
                    </span>
                </td>
            </tr>

        <% end %>                                                                             
        </tbody>
    </table>
</div>
<!-- /.table-responsive -->
<script>
    $(document).ready(function() {
        $('#dataTables-vendors').DataTable({
                responsive: true
        });
    });
</script>