<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">All Products</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div <%if @users.present?%>style="float:left;"<%end%> class="panel-heading">All Products by </div>
                <%if @users.present?%>
                    <div style="">
                        <select class="form-control" style="width:40%" onchange="fetch_products_by_specfic_vendor(this.value)">
                            <option value="All">All Vendors</option>
                            <% @users.each do |user| %>
                                <option value="<%=user.id%>"><%=user.name%></option>
                            
                            <%end%>
                        </select>
                    </div>
                <%end%>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div  id="vendor_products">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Discounted Price</th>
                                    <th>Description</th>
                                    <th>Picture</th>
                                    <th>Tools</th>
                                </tr>
                            </thead>
                            <tbody>

                            <% @admin_products.each do |product| %>

                                <tr class="odd gradeX">
                                    <td><%= product.name %></td>
                                    <td><%= product.price %></td>
                                    <td><%= product.discounted_pric %></td>
                                    <td class="center"><%= product.description %></td>
                                    <td class="center">
                                        <% for image in product.images %>
                                          <%= image_tag image.avatar.url(:thumbnail) %>
                                        <%end%>
                                    </td>
                                    <td class="center">
                                        <span><%= link_to '', edit_admin_product_path(product),class: "edit fa fa-edit icon_link with-tip no-text", title: "edit" %> </span>
                                        <span>
                                            <%= link_to '',  admin_product_path(product),  method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-trash icon_link with-tip no-text"%>
                                        </span>
                                    </td>
                                </tr>

                            <% end %>                                                                             
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->