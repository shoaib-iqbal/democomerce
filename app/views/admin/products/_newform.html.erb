<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                New Product Form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for(@admin_product) do |f| %>
                            
                            <div class="form-group">
                               <%=f.label :name%>
                                <%=f.text_field :name ,class: 'form-control', placeholder: 'Enter name' , required: 'true'%>
                            </div>
                            <div class="form-group">
                               <%=f.label :price%>
                                <%=f.text_field :price ,class: 'form-control', placeholder: 'Enter Price' , required: 'true'%>
                            </div>
                            <div class="form-group">
                               <%=f.label :discounted_price%>
                                <%=f.text_field :discounted_price ,class: 'form-control', placeholder: 'Discounted Price' %>
                            </div>
                            <div class="form-group">
                               <%=f.label :description%>
                                <%=f.text_field :description ,class: 'form-control', placeholder: 'deccribe' , required: 'true'%>
                            </div>
                            <div class="file_field">
                                <%=f.label :images%>
                                 <%= f.fields_for :image do |images_form| %>
                                   <%= images_form.file_field :avatar , multiple: true,class: 'form-control'%>
                                 <% end %>
                            </div><br>
                            
                            
                            <div class="form-group">
                              <%=f.label :Previous_Images%><br>
                              <%= f.fields_for :images do |asset_fields| %>

                                <% unless asset_fields.object.new_record? %>
                                  <%= link_to image_tag(asset_fields.object.avatar.url(:thumbnail)), 
                                              asset_fields.object.avatar.url(:original) %>

                                <% end %>
                              <% end %>
                            </div>

                          

                            <div class="form-group">
                               <%= f.label :Vendor %>
                               <%= f.select "user_id", options_from_collection_for_select(User.all, :id,:name,f.object.user_id),{ prompt: 'Select a Vendor'} ,:class=> 'form-control select', :id=> 'select',:onchange => 'get_vendors(this.value)' %>
                                                            
                            </div>
                            <div class="form-group">
                              <%= f.label :sizes %>
                                <%= f.select :size_ids, {},{}, :multiple => true ,:class=> 'select form-control' ,:id => 'vendor_sizes'%>
                            </div>

                            <div class="form-group">
                              <%= f.label :colors %>
                                <%= f.select :color_ids, {},{}, :multiple => true ,:class=> 'select form-control',:id => 'vendor_colors' %>
                            </div>
                           



                            <div class="form-group">
                                <label>Featured Product</label>
                                <div class="checkbox">
                                    <label>
                                        <%= f.check_box :featured %> Featured <br />
                                    </label>
                                </div>
                            </div>
                            

                            <div><p><%= f.submit 'Submit Button', class: "btn btn-default" %>
                            
                            <button type="reset" class="btn btn-default">Reset Button</button></p></div>
                        <%end%>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
