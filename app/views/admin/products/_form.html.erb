<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for(@admin_product) do |f| %>
                            
                            <div class="form-group">
                               <%=f.label :name%>
                                <%=f.text_field :name ,class: 'form-control', placeholder: 'Enter name'%>
                            </div>
                            <div class="form-group">
                               <%=f.label :price%>
                                <%=f.text_field :price ,class: 'form-control', placeholder: 'Enter name'%>
                            </div>
                            <div class="form-group">
                               <%=f.label :discounted_pric%>
                                <%=f.text_field :discounted_pric ,class: 'form-control', placeholder: 'Discounted Price'%>
                            </div>
                            <div class="file_field">
                                 <%= f.fields_for :image do |images_form| %>
                                   <%= images_form.file_field :avatar , multiple: true%>
                                 <% end %>
                              </div>
 <!--                            <%#= f.fields_for :images do |asset_fields| %>
                                <%# if asset_fields.object.new_record? %>
                                  <p><%#= file_field_tag "avatar[]", type: :file, multiple: true, onchange: "document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])"%></p>
                                <% #end %>
                            <%# end %> -->
                           
                            
                            <div><img id="blah" alt="your image" width="100" height="100" /></div>
                            
                            
                                  <%= f.fields_for :images do |asset_fields| %>

                                    <% unless asset_fields.object.new_record? %>
                                      <%= link_to image_tag(asset_fields.object.avatar.url(:thumbnail)), 
                                                  asset_fields.object.avatar.url(:original) %>

                                    <% end %>
                                  <% end %>

                            <%= f.submit 'Submit Button', class: "btn btn-default" %>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                        <%end%>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
