<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">All Vendors</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            DataTables Advanced Tables
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Location</th>
                                            <th>Email</th>
                                            <th>Tools</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>

                                    <% @users.each do |user| %>

                                        <tr class="odd gradeX">
                                            <td><%= user.name %></td>
                                            <td><%= user.location %></td>
                                            <td><%= user.email %></td>
                                            <td>
                                                <span>
                                                <%= link_to '', edit_admin_user_path(user) ,class: "edit fa fa-edit icon_link with-tip no-text", title: "edit"%>&nbsp;
                                                </span>
                                                <span>
                                               
                                             <%= link_to '',  admin_user_path(user),  method: :delete, data: { confirm: 'Are you sure?' } ,class: "fa fa-trash icon_link with-tip no-text"%>

                                                    
                                                </span>

                                                
                                                
                                            </td>
                                            
                                        </tr>

                                    <% end %>                                                                             
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->