
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= t 'admin.deals'%>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= simple_form_for(@admin_deal_of_day) do |f| %>

                            
                            <div class="form-group">
                               <%=f.label :product_id%>
                                
                                <%= f.select "product_id", options_from_collection_for_select(Admin::Product.all, :id,:name,f.object.product_id),{} ,:class=> 'form-control select', :id=> 'select' %>
                            </div>
                            
                            <div class="form-group">
                               
                                <%= f.input :expiry_time ,class: 'form-control'%>
                            </div>
                            
                            <%= f.submit 'Submit Button', class: "btn btn-default" %>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                            <a  href="/admin/deal_of_days" class="btn btn-default">Back</a>
                        <%end%>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->