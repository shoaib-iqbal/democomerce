<br><br><br>
<section class="content products">
   <div class="container">
      <article class="product-item product-single" style="     padding: 20px;">
         <div class="row">
            <br>
            <center>
               <h1>CONTINUE TO CHECKOUT</h1>
            </center>
            <hr>
         </div>
      </article>
   </div>
   <br><br><br>
   <div class="container">
   
      <div class="row">
         
         <div class="col-md-6">
            <div class="half-box forms">
               <h4>New Customers</h4>
               <br>
               <p>You can purchase as a guest. You will just need to indicate the essential details to place your order.</p>
               <p><a href="signup.html">Register Now</a> to save your details for future purchases.</p>
               <br>
               <a href="#<%#= checkout_details_path %>" class="btn btn-default">CHECKOUT AS GUEST</a>
               <a href="/customers/sign_up" class="btn btn-default">SIGNUP</a>
            </div>
         </div>

         <div class="col-md-6">
            <div class="half-box forms">
               <h4>Returning Customers</h4>
               <%= form_for(:user, url: checkout_details_path, html: {"data-parsley-validate" => true} ) do |f| %>
                  <div class="form-group">
                     <label>Email Address</label>
                     <%= f.email_field :email, :autocomplete=> :off, autofocus: true, :class=>"form-control", :placeholder=>"Enter Email address", :required=>true %>
                  </div>
                  <div class="form-group">
                     <label>Password</label>
                     <%= f.password_field :password, :autocomplete=> :off , :class=>"form-control", :placeholder=>"Enter Password", :required=>true %>
                  </div>
                  <div class="text-right">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="modal" data-target="#forgotmodal">Forgot Password?</button>
                     <button type="submit" class="btn btn-primary">Login</button>
                  </div>
               <%end%>
            </div>
         </div>

      </div>

   </div>
  
   <br><br> <br><br> <br><br>
</section>