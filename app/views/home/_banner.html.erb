<div class="banner-area section-padding2">
	<div class="container">
		<div class="row">
			<div id="banner-slider">
				<%@categories_all.each do |cat|%>
					<div class="single-product">
						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
							<div class="banner-image">
								<a href="/products?category=<%=cat.slug%>">
									<img src="<%=cat.image.avatar.url(:original) rescue ''%>" alt="">
								</a>
							</div>
						</div>	
					</div>
				<%end%>
			</div>
		</div>
	</div>
</div>















