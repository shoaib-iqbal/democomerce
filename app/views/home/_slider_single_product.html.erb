<%a=2%>
<% items.each_with_index do |product, index|%>
	<%if index%3 == 0 %>
		<div class="single-p-item">
	<%end%>


		<div class="single-product">
			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-6 ">

				<div class="all_products_fix_images_small">
					<a href="<%=product_path(product.slug)%>" title="<%= product.name %>">
						<div class="product-img_small">
						<%if product.images.present? %>
							<%=image_tag product.images.first.avatar.url(:large), :class => "img-responsive	 center-block"%>
						<%else%>
                            <img src="http://s3.amazonaws.com/commerceassets/admin/images/avatars/000/000/089/large/data?1473265319"/>
						<%end%>
						</div>
					</a>
						                                    
				</div>                                        
			</div>
			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
				<div class="product-content">
					<h5><a href="<%=product_path(product.slug)%>" title="<%= product.name %>"><%= product.name %></a></h5>
					<!--Product Rating-->
					<div class="rating-icon">
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
					</div>
					<!--Product Price-->
					<div class="product-price">
						<%if product.discounted_price?%>
						<span class="new-price"> <%= show_price(product.discounted_price) %> </span>
						<span class="old-price"><%=show_price(product.price ) %></span>
						<%else%>
						<span class="new-price"><%=show_price(product.price)  %></span>
						<%end%>
					</div>	
				</div>
			</div>
		</div> 
	<%if index == (items.length-1) or index==2 %>

		</div>
	<%end%>
	<%if  index-a == 3 and (index != (items.length-1))%>
		</div>
		<%a=index%>
	<%end%>

<%end%>