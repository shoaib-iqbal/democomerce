 <!-- Add your site or application content here -->
        <!-- Header Area Start -->
        <div class="header-area">
			<!-- Header Top Start -->
        	<div class="header-top">
        		<div class="container">
					<div class="row">
						<div class="col-md-3">
							<div class="header-default pull-left">
								<p style="position:relative; top:9px;"><%= t 'welcome.paragraph' %></p>
							</div>
						</div>
						<div class="col-lg-9 col-md-9 col-sm-12">
							<div class="header-top-right pull-right">
								
								<div class="header-user-info pull-right">

								

									   
										<select onchange="changelanguage(this.value)">
												<option <%=@lang == "en"?  'selected' : ''%> value="en">English</option>
												<option <%=@lang == "ar" ? 'selected' : ''%> value="ar"> <%= t 'welcome.arabic' %> </option>
										</select>
									
									<% if current_customer %>
	                    				<a href="#" title="<%= t 'welcome.account' %>">
	  									   <i class="fa fa-user"></i> 
	  									   <%= t 'welcome.myaccount' %>
	  									</a>
	  									<a href="/customers/sign_out" title="<%= t 'welcome.signout' %>">
	  									   <i class="fa fa-unlock-alt"></i> 
	  									   <%= t 'welcome.signout' %>
	  									</a>
					                <%else%>
					                	<a href="#" title="My wishlist" data-toggle="modal" data-target="#signinmodal">
									   		<i class="fa fa-unlock-alt"></i> 
									   		Sign in
										</a>
					                    <a href="/customers/sign_in" title="<%= t 'welcome.signin' %>">
					                       <i class="fa fa-unlock-alt"></i> 
					                       <%= t 'welcome.signin' %>
					                    </a>
					                <%end%>
									<a href="/carts" title="<%= t 'welcome.checkout' %>">
									   <i class="fa fa-share-square-o"></i> 
									   <%= t 'welcome.checkout' %>
									</a>
								</div>
							</div>
						</div>
					</div>
        		</div>
        	</div>
			<!-- Header Top End -->
			<!-- Header Bottom Start -->
        	<div class="header-bottom">
        	    <div class="container">
        	        <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
							<!-- Header Logo -->
                           <div class="header-logo">
                                <a href="/" title="logo">
                                    <img class="img-responsive" src="/assets/logo.png" alt="">
                                </a>
                           </div>
                        </div>
						<!--Header Bottom Right Start-->
						<div class="col-lg-2 col-md-2  col-sm-6 col-xs-12 header-right-inner">
						    <div class="header-bottom-right">
						        <div class="header-bottom-right-inner">
						            <ul>
						                <li>
					                    <a class="cart-toggler search-icon" href="javascript:void(0)">
					                        <i class="fa fa-search"></i>
					                    </a>
                              <div class="header-bottom-search">
                                <form class="search-box" action="#" method="POST">
                                  <div>
                                    <input type="text" value="" placeholder="Search" autocomplete="off">
                                    <button class="btn btn-search" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                  </div>
                                </form>						            
                              </div>
						                </li>
						                <li>
                                            <a class="cart-toggler mini-cart-icon" href="javascript:void(0)">
                                                    <i class="fa fa-shopping-cart"></i>
                                                    <span><div id="cart_products_count">

                                                    <%=@current_order.line_items.count rescue '0'%></div></span>
                                            </a>
						                    <div id="subcart">
                                                    
                                                    <%= render :partial => 'carts/subcart' %>

                                            </div>					                    
						                </li>
						            </ul>							            
						        </div>
						    </div>
						</div>
						<div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
							<!-- Main Menu -->
							<div class="mainmenu">
								<nav>
									<ul>
										<li><a href="/"><%= t 'welcome.home' %></a></li>
										<li><a href="/products"><%= t 'welcome.shop' %></a></li>
										<li><a href="about.html"><%= t 'welcome.aboutus' %></a></li>
										<li><a href="#"><%= t 'welcome.blog' %></a></li>
										<li><a href="contact.html"><%= t 'welcome.contactus' %></a></li>
									</ul>
								</nav>
							</div>
							<!--Mian Menu End-->
						</div>
        	        </div>
        	    </div>
        	</div>
        	<!--Header Bottom End-->
        </div>

		<!-- Header Area End -->
		<!-- Mobile Menu Start -->
		<div class="mobile-menu-area">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12">
						<div class="mobile-menu">
							<nav id="dropdown">
								<ul>
									    <li><a href="/"><%= t 'welcome.home' %></a></li>
										<li><a href="/products"><%= t 'welcome.shop' %></a></li>
										<li><a href="about.html"><%= t 'welcome.aboutus' %></a></li>
										<li><a href="#"><%= t 'welcome.blog' %></a></li>
										<li><a href="contact.html"><%= t 'welcome.contactus' %></a></li>
								</ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
		</div>		
		<!-- Mobile Menu End -->



		
		<div class="modal fade" id="signinmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Login</h4>
		      </div>
		      <div class="modal-body forms">
		        <div class="form-group">
		        	<label>Email Address</label>
		        	<input class="form-control" type="email">
		        </div>
		        <div class="form-group">
		        	<label>Password</label>
		        	<input class="form-control" type="password">
		        </div>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="modal" data-target="#forgotmodal">Forgot Password?</button>
		        <button type="button" class="btn btn-primary">Login</button>
		      </div>
		    </div>
		  </div>
		</div>
