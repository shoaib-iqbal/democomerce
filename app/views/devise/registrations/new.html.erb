

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>



<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>


<hr>

<div class="container forms">
	
	<br><br>

	<div class="section-title">
		<h4>Create An Account</h4>
	</div>

	<div class="row">

		<div class="col-md-12">
			<h4>Personal Details</h4><br>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label>First Name*</label>
				<%= f.text_field :first_name, required: true,class: 'form-control' %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label>Last Name*</label>
				<%= f.text_field :last_name, required: true ,class: 'form-control'%>
				<!-- <input type="text" class="form-control" , placeholder=""> -->
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label>Email Address*</label>
				<%= f.email_field :email, required: true,class: 'form-control' %>
				
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label>Phone Number</label>
				<%= f.number_field :phone_number, required: true,class: 'form-control' %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label>Mobile Number*</label>
				<%= f.number_field :mobile_number, required: true, class: 'form-control' %>
			</div>
		</div>
	</div>

        
    <%= f.fields_for :addresses do |add| %> 
        
		<div class="row">
			<div class="col-md-12">
				<br><h4>Your Current Location</h4><br>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>Address*</label>
					<%= add.text_field :address, required: true,class: 'form-control' %>

				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					<label>Country*</label>
					<%= add.text_field :country , class: 'form-control', :placeholder=>"country" , :required=>true %>
				</div>
			</div>
		

			<div class="col-md-4">
				<div class="form-group">
					<label>State*</label>
					<%= add.text_field :country_state, class: 'form-control', :placeholder=>"country state" , :required=>true %>
				</div>
			</div>

			<div class="col-md-4">
				<div class="form-group">
					<label>City*</label>
					<%= add.text_field :city,class: 'form-control', :placeholder=>"city" , :required=>true %>
				</div>
			</div>
			

		</div>
	<%end%>

	<div class="row">
		<div class="col-md-12">
			<br><h4>Account Information</h4><br>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label>Password*</label>
				<%= f.password_field :password, class: 'form-control', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
				
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<label>Confirm Password*</label>
				<%= f.password_field :password_confirmation, required: true , class: 'form-control'%>
			</div>
		</div>

		<div class="col-md-12">
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input type="checkbox" required> I agree to the terms of use
					</label>
				</div>
			</div>
		</div>
		
		

		<div class="col-md-12">
		<br>
		<%= f.button :submit, "Sign up",class: 'btn btn-success btn-lg btnsubmit_signup' %>
			
		</div>

	</div>
</div>


<div class="container text-center">
	
	Already have an account? <a href="" data-toggle="modal" data-target="#signinmodal">Login</a><br>
		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
	<% end -%>


</div>


<br><br><br><br>











   

  
<% end %>

<script>
	$(function () {
        $(".btnsubmit_signup").click(function () {
            var password = $("#customer_password").val();
            var confirmPassword = $("#customer_password_confirmation").val();
            if (password != confirmPassword) {
                alert("Passwords do not match.");
                return false;
            }
            return true;
        });
    });
</script>